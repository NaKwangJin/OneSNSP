<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/header_theme_pink"
        android:scaleType="fitXY"
        android:background="@drawable/mainborder"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="160dp"
        android:paddingBottom="80dp">

        <EditText
            android:id="@+id/LoginIDBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/logintextbox"
            android:layout_marginBottom="10dp"
            android:hint="  User ID"/>
        <EditText
            android:id="@+id/LoginPWBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/logintextbox"
            android:inputType="textPassword"
            android:hint="  Password"
            android:layout_marginBottom="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/loginbuttontheme"
            android:fontFamily="@font/busanfont"
            android:text="Log In"
            android:textColor="#FF7FE9"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/loginbtn"
            android:layout_marginBottom="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/loginbuttontheme"
            android:fontFamily="@font/busanfont"
            android:text="Register"
            android:textColor="#FF7FE9"
            android:textStyle="bold"
            android:id="@+id/regbtn"
            android:layout_marginBottom="10dp"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/btn_kakao_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/kakao_account_login_btn_medium_wide"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/facebookLoginButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="25dp"
                android:paddingLeft="30dp"
                android:layout_gravity="center"
                android:paddingTop="25dp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>